<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<!-- One suite with 4 parallel test blocks -->
<suite name="CrossBrowser Desktop+Mobile" parallel="tests" thread-count="4">


    <listeners>
        <listener class-name="DemoQA.Helpers.ScreenshotOnFailureListener"/>
    </listeners>

    <!-- Chrome Desktop -->
    <test name="Chrome-Desktop">
        <parameter name="browser" value="chrome"/>
        <parameter name="mode" value="desktop"/>
        <packages>
            <package name="DemoQA.Tests.Elements"/>
        </packages>
    </test>

    <!-- Chrome Mobile -->
    <test name="Chrome-Mobile">
        <parameter name="browser" value="chrome"/>
        <parameter name="mode" value="mobile"/>
        <packages>
            <package name="DemoQA.Tests.Elements"/>
        </packages>
    </test>

    <!-- Firefox Desktop -->
    <test name="Firefox-Desktop">
        <parameter name="browser" value="firefox"/>
        <parameter name="mode" value="desktop"/>
        <packages>
            <package name="DemoQA.Tests.Elements"/>
        </packages>
    </test>

    <!-- Firefox Mobile -->
    <test name="Firefox-Mobile">
        <parameter name="browser" value="firefox"/>
        <parameter name="mode" value="mobile"/>
        <packages>
            <package name="DemoQA.Tests.Elements"/>
        </packages>
    </test>

</suite>